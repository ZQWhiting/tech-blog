<article>
    <div class="item-header">
        <h2>
            <a href="/post/{{id}}">
                {{title}}
            </a>
        </h2>
        <span>
            Posted by {{user.username}} on {{format_date created_at}}
        </span>
    </div>
    <div class="item-body">
        {{post_text}}
    </div>
</article>