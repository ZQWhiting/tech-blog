<div class='item'>
    <div class='item-header'>
        Edit Post
    </div>
    <div class='item-body'>
        <div>
            <label for="edit-title">Title</label>
            <input type="text" id="edit-title" value="{{post.title}}">
        </div>
        <div>
            <label for="edit-content">Content</label>
            <textarea name="edit-content" id="edit-content" cols="30" rows="10">{{post.post_text}}</textarea>
        </div>
        <div class='wrapper'>
            <button type="submit" class='btn'>Update Post</button>
            <button id="delete-post" class='btn'>Delete</button>
        </div>
    </div>
</div>