<div class='item'>
    <div class='item-header'>
        Edit Post
    </div>
    <form class='item-body' id='edit-post-form'>
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" value="{{post.title}}">
        </div>
        <div>
            <label for="post-text">Content</label>
            <textarea name="post-text" id="post-text" rows="3">{{post.post_text}}</textarea>
        </div>
        <div class='wrapper'>
            <button type="submit" class='btn'>Update Post</button>
            <button id="delete-post" class='btn'>Delete</button>
        </div>
    </form>
</div>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>